/*
DESCRIPTION: This program blinks the on board LED as well as and LED connected to pin 
             12.

AUTHOR: Justus Downing

COMMENTS: Derived from the standard Arduino "Blink" sample. Designed for Uno,
          but should work on any Arduino with GPIOs. 

HISTORY: Version 1.0.

*/

//////////////////////////////////////////////////////////////////////////////////////
// INCLUDES
//////////////////////////////////////////////////////////////////////////////////////

//////////////////////////////////////////////////////////////////////////////////////
// DEFINES AND MACROS
//////////////////////////////////////////////////////////////////////////////////////

// Define an external pin for a 2nd LED
#define LED_EXTERNAL    12

//////////////////////////////////////////////////////////////////////////////////////
// FUNCTIONS
//////////////////////////////////////////////////////////////////////////////////////

void setup() 
{
// the setup function runs once when you press reset or power the board
// initialize digital pin LED_BUILTIN as an output.
pinMode(LED_EXTERNAL, OUTPUT);
pinMode(LED_BUILTIN, OUTPUT);
  
} // end setup

//////////////////////////////////////////////////////////////////////////////////////

void loop() 
{
// the loop function runs over and over again forever
  
digitalWrite(LED_EXTERNAL, HIGH);   // turn the LED on (HIGH is the voltage level)
digitalWrite(LED_BUILTIN, LOW);
delay(100);                       // wait for a second
  
digitalWrite(LED_EXTERNAL, LOW);    // turn the LED off by making the voltage LOW
digitalWrite(LED_BUILTIN, HIGH);
delay(100);                       // wait for a second

} // end loop

